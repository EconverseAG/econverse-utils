{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.type.ts",
    "**/*.d.ts"
  ]
}
